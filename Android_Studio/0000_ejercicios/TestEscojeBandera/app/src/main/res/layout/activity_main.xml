<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cual es la bandera de: "
                android:textSize="40sp" />

            <ImageButton
                android:id="@+id/ib1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Argentina"
                app:srcCompat="@drawable/argentina" />

            <ImageButton
                android:id="@+id/ib2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:src="@drawable/bolivia"
                android:tag="Bolivia" />

            <ImageButton
                android:id="@+id/ib3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Brasil"
                app:srcCompat="@drawable/brasil" />

            <ImageButton
                android:id="@+id/ib4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Chile"
                app:srcCompat="@drawable/chile" />

            <ImageButton
                android:id="@+id/ib5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Colombia"
                app:srcCompat="@drawable/colombia" />

            <ImageButton
                android:id="@+id/ib6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Peru"
                app:srcCompat="@drawable/peru" />

            <ImageButton
                android:id="@+id/ib7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Uruguay"
                app:srcCompat="@drawable/uruguay" />

            <ImageButton
                android:id="@+id/ib8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="presionar"
                android:tag="Venezuela"
                app:srcCompat="@drawable/venezuela" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>