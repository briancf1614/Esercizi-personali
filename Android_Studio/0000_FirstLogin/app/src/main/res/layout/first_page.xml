<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtitolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ciao Utente"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"></TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvAPISuccess"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#6587FF"
            app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvUtente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvCoord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvWeather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvTempMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvTempMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvPressione"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvUmidita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvPressioneMare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvPressioneTerra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvVento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvNubolePercentuale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Utente:utente"></TextView>
                    <TextView
                        android:id="@+id/tvPaese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                    <TextView
                        android:id="@+id/tvCittaSelezionata"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Password:Password"></TextView>
                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAPIFail"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FF7676"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Non ho trovato quella citta, prova con un altra"
                android:layout_margin="10dp"
                android:textSize="30sp"></TextView>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Inserisci una citta:"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCitta"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:hint="Assicurati di scriverla bene"
                android:layout_marginBottom="30dp"></EditText>
            <Button
                android:id="@+id/btnCerca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerca"
                android:backgroundTint="#667FFF"
                android:layout_gravity="center_horizontal"></Button>

        </LinearLayout>


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>